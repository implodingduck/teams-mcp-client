{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.23/MicrosoftTeams.schema.json",
  "manifestVersion": "1.23",
  "id": "${{TEAMS_APP_ID}}",
  "version": "1.0.1",
  "developer": {
    "name": "implodingduck",
    "websiteUrl": "https://github.com/implodingduck/teams-mcp-client",
    "privacyUrl": "https://github.com/implodingduck/teams-mcp-client",
    "termsOfUseUrl": "https://github.com/implodingduck/teams-mcp-client"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "teams-mcp-client",
    "full": "Teams MCP Client"
  },
  "description": {
    "short": "Interact with MCP tools from Microsoft Teams.",
    "full": "Interact with MCP tools from Microsoft Teams."
  },
  "accentColor": "#FFFFFF",
  "copilotAgents": { 
    "customEngineAgents": [ 
        { 
            "id": "${{BOT_ID}}", 
            "type": "bot" 
        } 
    ]
  },
  "bots": [
    {
      "botId": "${{BOT_ID}}",
      "scopes": ["personal", "team"],
      "isNotificationOnly": false,
      "supportsCalling": false,
      "supportsVideo": false,
      "supportsFiles": false
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "${{BOT_DOMAIN}}",
    "*.botframework.com"
  ],
  "webApplicationInfo": {
    "id": "${{BOT_ID}}",
    "resource": "api://botid-${{BOT_ID}}"
  }
}
